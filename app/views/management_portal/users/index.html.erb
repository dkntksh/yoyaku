
<h1>ユーザ一覧</h1>
<div class="flash-notifications">
  <%= flash[:notice] %>
</div>

<%= paginate @users %>
<table>
  <thead>
    <tr class="header">
      <th>ユーザ名</th>
      <th>組織名</th>
      <th>メールアドレス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    
    <% @users.each do |user| %>
      <tr class="data">
        <td><%= user.name %></td>
        <td><%= user.user_code %></td>
        <td><%= link_to '詳細', management_portal_user_path(user.id) %></td>
        <td><%= link_to '編集', edit_management_portal_user_path(user) %></td>
        <td><%= link_to '削除', management_portal_user_path(user.id), method: :delete, data: { confirm: '削除してよろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>

<br>

<%= link_to '組織を新規登録する', new_management_portal_user_path %>
<%= link_to 'TOPに戻る', management_portal_path %>