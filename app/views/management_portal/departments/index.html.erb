
<h1>組織一覧</h1>
<div class="flash-notifications">
  <%= flash[:notice] %>
</div>

<%= paginate @departments %>
<table>
  <thead>
    <tr class="header">
      <th>組織名</th>
      <th>組織コード</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    
    <% @departments.each do |department| %>
      <tr class="data">
        <td><%= department.name %></td>
        <td><%= department.department_code %></td>
        <td><%= link_to '詳細', management_portal_department_path(department.id) %></td>
        <td><%= link_to '編集', edit_management_portal_department_path(department) %></td>
        <td><%= link_to '削除', management_portal_department_path(department.id), method: :delete, data: { confirm: '削除してよろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @departments %>

<br>

<%= link_to '組織を新規登録する', new_management_portal_department_path %>
<%= link_to 'TOPに戻る', management_portal_path %>