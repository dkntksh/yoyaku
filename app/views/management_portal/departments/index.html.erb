<p id="notice"><%= notice %></p>

<h1>組織一覧</h1>

<table>
  <thead>
    <tr>
      <th>組織名</th>
      <th>組織コード</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.department_code %></td>
        <td><%= link_to '詳細', management_portal_department_path(department.id) %></td>
        <td><%= link_to '編集', edit_management_portal_department_path(department) %></td>
        <td><%= link_to '削除', management_portal_department_path(department.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '組織を新規登録する', new_management_portal_department_path %>
