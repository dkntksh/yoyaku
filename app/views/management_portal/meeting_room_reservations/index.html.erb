<h1>予約一覧</h1>
<div class="flash-notifications">
  <%= flash[:notice] %>
</div>

<%= paginate @meeting_room_reservations %>

<table>
  <thead>
    <tr>
      <th>日時</th>
      <th>会議室</th>
      <th>予約者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meeting_room_reservations.each do |meeting_room_reservation| %>
      <tr>
        <td><%= meeting_room_reservation.start_reserve_date_time.strftime("%Y年%m月%d日%H時%M分").to_s + ' ~ ' + meeting_room_reservation.end_reserve_date_time.strftime("%Y年%m月%d日%H時%M分").to_s %></td>
        <td><%= meeting_room_reservation.meeting_room.name %></td>
        <td><%= meeting_room_reservation.reserve_user.name %></td>
        <td><%= link_to '詳細', management_portal_meeting_room_reservation_path(meeting_room_reservation.id) %></td>
        <td><%= link_to '編集', edit_management_portal_meeting_room_reservation_path(meeting_room_reservation) %></td>
        <td><%= link_to '削除', management_portal_meeting_room_reservation_path(meeting_room_reservation.id), method: :delete, data: { confirm: '削除してよろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @meeting_room_reservations %>

<br>

<%= link_to '予約を新規登録する', new_management_portal_meeting_room_reservation_path %>
<%= link_to 'TOPに戻る', management_portal_path %>
